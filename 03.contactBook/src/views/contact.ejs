<%- include('includes/header'); %>
  <%- include('includes/navbar'); %>


    <div class="container">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3 text-center ">

        <h1 class="text-center">Contact</h1>
        <p class="text-center lead">Create or edit yours contacts below:</p>

        <%- include('includes/messages') %>

          <% if (contact._id) { %>

            <form action="/contact/edit/<%= contact._id %>" method="POST">

              <% } else { %>
                <form action="/contact/register" method="POST">

                  <% } %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <div class="mb-3">
                      <input value="<%= contact.fname %>" type="text" class="form-control" name="fname"
                        placeholder="Type your name here">
                    </div>

                    <div class="mb-3">
                      <input value="<%= contact.lname %>" type="text" class="form-control" name="lname"
                        placeholder="Type your lastname here">
                    </div>

                    <div class="mb-3">
                      <input value="<%= contact.email %>" type="email" class="form-control" name="email"
                        placeholder="Type your email here">
                    </div>

                    <div class="mb-3">
                      <input value="<%= contact.phone %>" type="tel" class="form-control" name="phone"
                        placeholder="Type your phone here">
                    </div>

                    <button type="submit" class="btn btn-primary">Save Now</button>

                </form>



      </div>

      <div class="col-lg-2"></div>


    </div>


    <%- include('includes/footer'); %>